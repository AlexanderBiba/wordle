{
  "ci": {
    "collect": {
      "url": ["http://localhost:3000/wordle/"],
      "startServerCommand": "npx serve -s build -p 3000",
      "startServerReadyPattern": "Accepting connections at http://localhost:3000",
      "startServerReadyTimeout": 60000,
      "numberOfRuns": 1,
      "settings": {
        "onlyCategories": ["pwa"],
        "chromeFlags": "--no-sandbox --disable-dev-shm-usage --disable-gpu --headless --disable-web-security --disable-features=VizDisplayCompositor --disable-background-timer-throttling --disable-backgrounding-occluded-windows --disable-renderer-backgrounding",
        "skipAudits": [
          "uses-http2",
          "uses-passive-event-listeners",
          "meta-description",
          "http-status-code",
          "font-size",
          "link-text",
          "crawlable-anchors",
          "is-crawlable",
          "robots-txt",
          "tap-targets",
          "hreflang",
          "plugins",
          "canonical",
          "bf-cache",
          "uses-long-cache-ttl",
          "total-byte-weight",
          "uses-optimized-images",
          "uses-webp-images",
          "uses-text-compression",
          "efficient-animated-content",
          "duplicated-javascript",
          "legacy-javascript",
          "unused-javascript",
          "unused-css-rules",
          "critical-request-chains",
          "render-blocking-resources",
          "unminified-javascript",
          "unminified-css",
          "unused-images",
          "modern-image-formats",
          "uses-responsive-images",
          "preload-lcp-image",
          "csp-xss",
          "external-anchors-use-rel-noopener",
          "geolocation-on-start",
          "no-document-write",
          "no-vulnerable-libraries",
          "notification-on-start",
          "password-inputs-can-be-pasted-into",
          "meta-viewport",
          "structured-data"
        ]
      }
    },
    "assert": {
      "assertions": {
        "categories:pwa": ["warn", {"minScore": 0.6}],
        "service-worker": ["warn", {"minScore": 0.6}],
        "installable-manifest": ["warn", {"minScore": 0.6}],
        "apple-touch-icon": ["warn", {"minScore": 0.6}],
        "maskable-icon-a": ["warn", {"minScore": 0.6}],
        "splash-screen": ["warn", {"minScore": 0.6}],
        "themed-omnibox": ["warn", {"minScore": 0.6}],
        "content-width": ["warn", {"minScore": 0.6}],
        "viewport": ["warn", {"minScore": 0.6}],
        "document-title": ["warn", {"minScore": 0.6}]
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
} 